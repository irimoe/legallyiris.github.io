{
  "name": "www",
  "version": "1.0.0",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/bun": "latest",
    "@types/node": "^22.10.2",
    "eslint": "^9.21.0",
    "eslint-plugin-oxlint": "^0.15.13",
    "eslint-plugin-vue": "^9.30.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.15.13",
    "prettier": "3.5.3",
    "typescript": "~5.6.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "private": true,
  "scripts": {
    "dev:api": "cd packages/api && bun run dev",
    "dev:www": "cd packages/www && bun run dev",
    "dev": "run-p dev:api dev:www",
    "start": "cd packages/api && bun run start",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write --no-error-on-unmatched-pattern packages/**/src/**/*.{ts,tsx,vue}"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {}
}
